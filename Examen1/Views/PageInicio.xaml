<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen1.Views.PageInicio">
    
    
    <ContentPage.Content>         
        
        <StackLayout BackgroundColor="#E0FBFC">
            <Image Source="Logo_oficial_UCENM.png">

            </Image>
            <Label Text="¡Bienvenido!" FontSize="50" TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>

            <Button x:Name="AgregarContacto" Text="Agregar Contacto" Clicked="AgregarContacto_Clicked" TextColor="White"
                    Margin="10,10,10,0"
                    BackgroundColor="#98C1D9"/>

            <Button x:Name="DatosGuardados" Text="Agenda" Clicked="ToolbarItem_DatosGuardados" TextColor="White"
                    Margin="10,10,10,0"
                    BackgroundColor="#98C1D9"/>

            <Button x:Name="GuardarSitios" Text="Guardar Sitio Visitado" Clicked="SitiosGuardado_Clicked" TextColor="White"
                    Margin="10,10,10,0"
                    BackgroundColor="#98C1D9"/>

            <Button x:Name="SitiosGuardado" Text="Ver Sitios Visitados" Clicked="VerSitios_Clicked" TextColor="White"
                    Margin="10,10,10,0"
                    BackgroundColor="#98C1D9"/>

        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>